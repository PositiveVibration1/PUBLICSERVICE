<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.positivevibes.publicservice.Practise">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:background="@android:color/white"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/twitter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            app:srcCompat="@drawable/layoutt" />

        <TextView
            android:id="@+id/UwezoFund"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:onClick="UwezoFund"
            android:text="Uwezo Fund"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/youthfund"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:background="@android:color/holo_red_dark"
            android:layout_below="@+id/UwezoFund"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:onClick="youthfund"
            android:text="YOUTHFUND" />

        <TextView
            android:id="@+id/wef"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_below="@+id/youthfund"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:onClick="wef"
            android:text="Women Enterprise fund" />

        <TextView
            android:id="@+id/AccessG"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_alignEnd="@+id/youthfund"
            android:layout_below="@+id/wef"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="8sp"
            android:onClick="AccessG"
            android:text="AGPO"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/PSC"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/AccessG"
            android:layout_marginTop="16dp"
            android:layout_toStartOf="@+id/LinkedIn"
            android:background="@android:color/black"
            android:onClick="PSC"
            android:text="Public Service Commission"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/LinkedIn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/UwezoFund"
            android:background="@android:color/holo_red_light"
            android:onClick="LinkedIn"
            android:text="LinkedIn"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/yuotube"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="38dp"
            android:background="@android:color/black"
            android:onClick="youtube"
            android:text="Youtube"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/twitter"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:onClick="twitter"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_toStartOf="@+id/yuotube"
            android:text="Twitter" />

        <TextView
            android:id="@+id/facebook"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/holo_green_light"
            android:onClick="facebook"
            android:textAlignment="center"
            android:layout_above="@+id/imageView"
            android:layout_toStartOf="@+id/twitter"
            android:text="Facebook" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
