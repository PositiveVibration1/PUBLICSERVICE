<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.positivevibes.publicservice.Interface">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="22dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/mygov" />

        <TextView
            android:id="@+id/ecitizen"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:onClick="ecitizen"
            android:background="@android:color/black"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="E-CITIZEN" />

        <TextView
            android:id="@+id/mygov"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/ecitizen"
            android:layout_below="@+id/ecitizen"
            android:layout_marginTop="24dp"
            android:background="@android:color/holo_red_dark"
            android:onClick="mygov"
            android:text="MYGOV"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/KRA"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:onClick="KRA"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_below="@+id/mygov"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="KRA" />

        <ImageView
            android:id="@+id/Uwezo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView3"
            android:layout_below="@+id/KRA"
            android:onClick="Uwezo"
            android:layout_marginStart="26dp"
            android:layout_marginTop="51dp"
            app:srcCompat="@drawable/uwezo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/KRA"
            android:text="UWEZO" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
